#include <dt-bindings/zmk/matrix_transform.h>
#include "Enigma_03_layouts.dtsi"

/ {
    chosen {
        zmk,kscan = &kscan_0;
        zmk,studio-rpc = &studio_usb;
        zmk,physical-layout = &layout_0;
    };

    kscan_0: kscan_0 {
        compatible = "zmk,kscan-gpio-charlieplex";
        interrupt-gpios = <&gpio0 2 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>;
        gpios = <&gpio0 3 GPIO_ACTIVE_HIGH>,
                <&gpio0 29 GPIO_ACTIVE_HIGH>,
                <&gpio1 15 GPIO_ACTIVE_HIGH>,
                <&gpio0 9 GPIO_ACTIVE_HIGH>,
                <&gpio0 28 GPIO_ACTIVE_HIGH>,
                <&gpio1 11 GPIO_ACTIVE_HIGH>,
                <&gpio1 14 GPIO_ACTIVE_HIGH>,
                <&gpio0 10 GPIO_ACTIVE_HIGH>;
    };

    transform_0: transform_0 {
        compatible = "zmk,matrix-transform";
        rows = <8>;
        columns = <8>;
        map = <
    RC(0,1)  RC(0,2)  RC(0,3)  RC(0,4)  RC(0,5)  RC(4,2)  RC(4,3)  RC(4,5)  RC(4,6)  RC(4,7)
    RC(1,0)  RC(1,2)  RC(1,3)  RC(1,4)  RC(1,5)  RC(5,2)  RC(5,3)  RC(5,4)  RC(5,6)  RC(5,7)
    RC(2,0)  RC(2,1)  RC(2,3)  RC(2,4)  RC(2,5)  RC(6,2)  RC(6,3)  RC(6,4)  RC(6,5)           RC(6,7)  RC(7,3)
    RC(3,0)  RC(3,1)           RC(3,2)  RC(3,4)  RC(3,5)  RC(7,2)                    RC(7,4)  RC(7,5)  RC(7,6)
        >;
    };

    studio_usb: studio_usb {
        compatible = "zmk,studio-rpc-usb-uart";
    };
};
